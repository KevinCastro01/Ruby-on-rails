<section class="center">
<article class="articulo1">

<h2>Iniciar sesion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="iniciar">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Ingrese su correo", id:"iniciar" %>
  </div>

  <div class="iniciar">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Ingrese su contraseÃ±a",id:"iniciar" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="iniciar">
      <%= f.check_box :remember_me %>
      <%= f.label :recuerdame %>
    </div>
  <% end %>

  <div class="botonIniciar">
    <%= f.submit "Iniciar sesion", style: "height: 30px; width:200px;"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</article>
<article class="articulo2">
  <%= image_tag "logosena.jpeg", id:"image"%>
</article>
</section>

